{% extends '::layout/layoutAdmin.html.twig' %}
{% block title title|title %}
{% block body -%}
    <h1>Liste des categories</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Catégorie</th>
            </tr>
        </thead>
        <tbody>
        
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.nom }}</td>
                <td>
                    <a href="{{ path('adminCategories_show', { 'id': categorie.id }) }}"><i class="fa fa-eye"></i>&nbsp;voir</a>&nbsp;&nbsp;
                    <a href="{{ path('adminCategories_edit', { 'id': categorie.id }) }}"><i class="fa fa-pencil"></i>&nbsp;éditer</a>&nbsp;&nbsp;
                    <a href="{{ path('adminCategories_delete', { 'id': categorie.id }) }}"><i class="fa fa-trash"></i>&nbsp;supprimer</a>&nbsp;&nbsp;
                </ul>
                </td>
            </tr>
        {% endfor %}
        
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('adminCategories_new') }}">
                Nouvelle categorie
            </a>
        </li>
    </ul>
{% endblock %}
