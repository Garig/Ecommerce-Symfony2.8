<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block titre %}Administration - MyPanier.fr | Fruits & l√©gumes{% endblock %}</title>
        <meta name="keywords" content="{% block motsCles %}{% endblock %}" />
        <meta name="description" content="{% block description %}{% endblock %}" />
        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/bootstrap-responsive.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/style.css') }}" />
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <button class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse" type="button">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="brand" style="margin-left:25px;color:#fff" href="{{ path('adminPages_index') }}">Administration</a>
                </div>
            </div>
        </div>
            
        <div class="container" style="margin-top:80px">
            <div class="row">
                <div class="span3">
                    {% include '::modulesUsed/navigationAdmin.html.twig' %}
                </div>
                <div class="span8" style="margin-left:50px">
                    <div>
                        {% for messages in app.session.flashBag.all %}
                            {% for message in messages %}
                                <div class="alert alert-success">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>

        <hr />
	<footer id="footer" class="vspace20">
            <div class="container">
            <div class="row">
                <div class="span4">
                    <p>&copy; Copyright 2016 - MyPanier.fr</p>
                </div>
            </div>
	</footer>	
        <script src="{{ asset('js/jquery-1.10.0.min.js') }}"></script>
        <script src="{{ asset('../js/bootstrap.js') }}"></script>
        <script src="{{ asset('bundles/pages/ckeditor/ckeditor//ckeditor.js') }}"></script>
        <script type="text/javascript" src="{{ asset ('https://use.fontawesome.com/fb3bdccdce.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>