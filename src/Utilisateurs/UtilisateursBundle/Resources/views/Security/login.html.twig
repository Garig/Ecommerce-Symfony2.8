{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    {#<div>{{ error|trans }}</div>#}
    <div>{{ error.message|trans({'Bad credentials': 'Login ou mot de passe incorrect'}) }}</div>
{% endif %}
<div class="row">


                <div class="col-lg-6 col-md-6 col-xs-12" style="margin-bottom:30px">
                    <h2>Connexion</h2>
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                    <label for="username">{{ 'security.login.username'|trans }}</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

                    <label for="password">{{ 'security.login.password'|trans }}</label>
                    <input type="password" id="password" name="_password" required="required" />
                    
                    <input class="btn btn-primary" type="submit" value="{{ 'security.login.submit'|trans }}" /><br><br>
                    <a href="{{ path('fos_user_resetting_request') }}">Mot de passe perdu ?</a>
                    </form>
                    <h4 style="margin-top:30px">Pas encore inscrit ?</h4>
                    <a href="{{ path('fos_user_registration_register') }}" class="btn btn-primary">S'inscrire</a>
                </div>

</div>
{% endblock fos_user_content %}
